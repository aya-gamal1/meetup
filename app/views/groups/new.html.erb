<html>
<head>
<style>
.div{
border:solid ;
}
.div1{
border:solid 1px;
width:100px;
float:left;
}

</style>
</head>
<body>

<div class="container">
<h1 class="page-header">Adding New Group</h1>
<%= form_for :group ,url:groups_path do |f| %>



    <%= f.hidden_field :user_id, :value => current_user.id %>
 
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :topicname,class:"form-control" ,placeholder:"Enter group name....."%>
  </div>
   
 <% if @group.errors[:topicname].present? %>
          title can`t be blank
  <% end %>
     <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description ,class:"form-control" ,placeholder:"Enter group description....."%>
    </div>
  

 <% if @group.errors[:description].present? %>
          description can`t be blank
  <% end %>





    <%= fields_for :tag do |t| %>

    <%= t.label :interest %><br>
            <%= t.text_field :name ,class:"text form-control"  %><br/><br />
    <%= t.hidden_field :id , class:"id" %>
<% @tags.each do |tag| %>
<div class="div1" id="<%= tag.id %>" ><%= tag.name %></div>

        <% end %>
<% end %>


<br><br><br><br>
 <div class="form-group">
  <%= f.file_field :avatar %>
</div>
<div class="form-group">
  <%= f.label :location %>
  <%= f.text_field :location %>
</div>

 
   <div class="form-group">
    <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>
<%= javascript_include_tag "application" %>
</div>


</body>
</html>
