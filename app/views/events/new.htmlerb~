    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </p>

<p>
    <%= f.label :avatar %><br>
    <%= f.text_area :avatar %>
  </p>

<p>
    <%= f.label :date %><br>
    <%= f.text_field:date %>
  </p>

<p>
    <%= f.label :time %><br>
    <%= f.text_field :time %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
