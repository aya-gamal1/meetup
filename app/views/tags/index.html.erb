<% if current_user.isadmin == "admin" %>
<div class="container">
<p id="notice"><%= notice %></p>
<%= link_to 'Groups', groups_path,class:"btn btn-info" %>
 <%= link_to 'Users', users_path,class:"btn btn-primary" %>

<h1>Listing Tags</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', tag ,class:"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) ,class:"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', tag,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path ,class:"btn btn-success"%>


<%else%>
<p> you are not the admin so you cant see this page</p>
 <script type="text/javascript">
    window.location.href="http://localhost:3000/groups"  // put your correct path in a string here
  </script>
<%end%>  
</div>
